<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dnk.smart.door.dao.CredentialDao">
    <sql id="entity">credential</sql>
    <sql id="id">id</sql>
    <sql id="column">id, tenantId, uuid, type, sequence, createTime, updateTime</sql>
    <sql id="search">
        FROM
        <include refid="entity"/>
        JOIN tenant ON credential.tenantId = tenant.id
        JOIN locks ON credential.uuid = locks.uuid
        JOIN house ON locks.houseId = house.id
        <where>
            <if test="tenant != null and tenant != ''">
                tenant.name LIKE "%"#{tenant}"%"
            </if>
            <if test="house != null and house != ''">
                AND house.name LIKE "%"#{house}"%"
            </if>
            <if test="lock != null and lock != ''">
                AND lock.name LIKE "%"#{lock}"%"
            </if>
            <if test="type != null">
                AND credential.type = #{type}
            </if>
        </where>
    </sql>

    <insert id="save">
        INSERT INTO
        <include refid="entity"/>
        (<include refid="column"/>)
        VALUES
        (NULL, #{tenantId}, #{uuid}, #{type}, #{sequence}, NULL, NULL)
    </insert>

    <insert id="saves">
        INSERT INTO
        <include refid="entity"/>
        (<include refid="column"/>)
        VALUES
        <foreach collection="list" item="entity" separator=",">
            (NULL, #{entity.tenantId}, #{entity.uuid}, #{entity.type}, #{entity.sequence}, NULL, NULL)
        </foreach>
    </insert>

    <delete id="deleteById">
        DELETE FROM
        <include refid="entity"/>
        WHERE
        <include refid="id"/>
        = #{id}
    </delete>

    <delete id="deleteByEntity">
        DELETE FROM
        <include refid="entity"/>
        WHERE
        <include refid="id"/>
        = #{id}
    </delete>

    <delete id="deleteByIds">
        DELETE FROM
        <include refid="entity"/>
        WHERE
        <include refid="id"/>
        IN
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteByEntities">
        DELETE FROM
        <include refid="entity"/>
        WHERE
        <include refid="id"/>
        IN
        <foreach collection="list" item="entity" open="(" separator="," close=")">
            #{entity.id}
        </foreach>
    </delete>

    <update id="update">
        UPDATE
        <include refid="entity"/>
        SET
        tenantId = #{tenantId}, uuid = #{uuid}, type = #{type}, sequence = #{sequence}, updateTime = CURRENT_TIMESTAMP
        WHERE
        <include refid="id"/>
        = #{id}
    </update>

    <select id="findById" resultType="Credential">
        SELECT * FROM
        <include refid="entity"/>
        WHERE
        <include refid="id"/>
        = #{id}
    </select>

    <select id="findAll" resultType="Credential">
        SELECT * FROM
        <include refid="entity"/>
        ORDER BY
        <include refid="id"/>
        DESC
    </select>

    <select id="findInterval" resultType="Credential">
        SELECT * FROM
        <include refid="entity"/>
        ORDER BY
        <include refid="id"/>
        DESC
        limit #{offset}, #{limit}
    </select>

    <select id="count" resultType="int">
        SELECT COUNT(*) FROM
        <include refid="entity"/>
    </select>

    <select id="findList" resultType="Credential">
        SELECT * FROM
        <include refid="entity"/>
        <where>
            <if test="tenantId != null and tenantId > 0">
                tenantId = #{tenantId}
            </if>
            <if test="uuid != null and uuid != ''">
                AND uuid LIKE "%"#{uuid}"%"
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
        </where>
    </select>

    <select id="findMap" resultType="map">
        SELECT
        credential.*, tenant.name as tenant, house.name as house
        <include refid="search"/>
        ORDER BY
        <include refid="id"/>
        DESC
        <if test="offset >= 0 and limit > 0">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="countMap" resultType="int">
        SELECT COUNT(*) FROM
        <include refid="entity"/>
        <include refid="search"/>
    </select>
</mapper>
