<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dnk.smart.door.dao.UserDao">
    <sql id="entity">user</sql>
    <sql id="id">id</sql>
    <sql id="column">id, name, password, createTime, updateTime</sql>

    <insert id="save">
        INSERT INTO
        <include refid="entity"/>
        <include refid="column"/>
        VALUES
        (NULL, #{name}, #{password}, NULL, NULL)
    </insert>

    <delete id="deleteById">
        DELETE FROM
        <include refid="entity"/>
        WHERE
        <include refid="id"/>
        = #{id}
    </delete>

    <delete id="deleteByEntity">
        DELETE FROM
        <include refid="entity"/>
        WHERE
        <include refid="id"/>
        = #{id}
    </delete>

    <delete id="deleteByIds">
        DELETE FROM
        <include refid="entity"/>
        WHERE id IN
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <delete id="deleteByEntities">
        DELETE FROM
        <include refid="entity"/>
        WHERE id IN
        <foreach collection="list" item="entity" open="(" separator="," close=")">
            #{entity.id}
        </foreach>
    </delete>

    <update id="update">
        UPDATE
        <include refid="entity"/>
        SET
        name = #{name}, password = #{password}, updateTime = CURRENT_TIMESTAMP
        WHERE
        <include refid="id"/>
        = #{id}
    </update>

    <select id="findById" resultType="User">
        SELECT * FROM
        <include refid="entity"/>
        WHERE
        <include refid="id"/>
        = #{id}
    </select>

    <select id="findAll" resultType="User">
        SELECT * FROM
        <include refid="entity"/>
        ORDER BY
        <include refid="id"/>
        DESC
    </select>

    <select id="findInterval" resultType="User">
        SELECT * FROM
        <include refid="entity"/>
        ORDER BY
        <include refid="id"/>
        DESC
        limit #{offset}, #{limit}
    </select>

    <select id="count" resultType="int">
        SELECT COUNT(*) FROM
        <include refid="entity"/>
    </select>

    <select id="find" resultType="User">
        SELECT * FROM
        <include refid="entity"/>
        WHERE name = #{name} AND password = #{password}
    </select>
</mapper>
